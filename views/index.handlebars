<div class="jumbotron">
  <h1 class="text-center">Burgers!</h1>
  <img class="mx-auto d-block rounded-circle" src="/assets/images/burger.png" alt="burger" width="100" height="100">
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li class="list-group-item">
            {{id}}. {{burger_name}}
            <br>
            <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">Devour!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-4">
      <h2 class="text-center">Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="col-sm-4">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li class="list-group-item">
            {{id}}. {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

